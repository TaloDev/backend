{
  "$schema": "./node_modules/oxlint/configuration_schema.json",
  "plugins": ["typescript"],
  "categories": {},
  "rules": {
    "no-restricted-imports": ["error", { "patterns": ["@mikro-orm/core"] }],
    "typescript/consistent-type-definitions": ["error", "type"],
    "typescript/no-explicit-any": "error",
    "typescript/no-floating-promises": "error"
  },
  "overrides": [
    {
      "files": ["src/**/*.ts"],
      "rules": {
        "no-restricted-globals": ["error", "app", "ctx", "em", "clickhouse", "redis"]
      }
    }
  ],
  "settings": {
    "vitest": {
      "typecheck": false
    }
  },
  "env": {
    "builtin": true
  },
  "globals": {},
  "ignorePatterns": []
}
