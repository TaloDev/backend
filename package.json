{
  "name": "game-services",
  "version": "0.0.1",
  "description": "",
  "main": "src/index.ts",
  "scripts": {
    "watch": "tsnd --respawn src/index.ts",
    "build": "tsc -p tsconfig.build.json",
    "schema:create": "mikro-orm schema:create -r",
    "schema:update": "mikro-orm schema:update -r",
    "seed": "docker compose -f docker-compose.yml -f docker-compose.test.yml -f docker-compose.dev.yml exec backend yarn ts-node tests/seed.ts",
    "test": "./tests/setup-tests.sh",
    "up": "docker compose -f docker-compose.yml -f docker-compose.test.yml -f docker-compose.dev.yml up --build -d",
    "down": "docker compose -f docker-compose.yml -f docker-compose.test.yml -f docker-compose.dev.yml down",
    "logs": "docker compose -f docker-compose.yml -f docker-compose.test.yml -f docker-compose.dev.yml logs backend --follow",
    "restart": "yarn down && yarn up"
  },
  "author": "Sleepy Studios",
  "license": "MIT",
  "devDependencies": {
    "@mikro-orm/cli": "^4.5.5",
    "@types/ioredis": "^4.22.3",
    "@types/jest": "^26.0.20",
    "@types/koa": "^2.11.6",
    "@types/koa-bodyparser": "^4.3.0",
    "@types/koa-logger": "^3.1.1",
    "@types/lodash": "^4.14.170",
    "@types/node": "^14.14.16",
    "@types/redis": "^2.8.29",
    "@types/supertest": "^2.0.10",
    "casual": "^1.6.2",
    "hefty": "^1.0.0",
    "jest": "^26.6.3",
    "supertest": "^6.1.3",
    "ts-jest": "^26.5.1",
    "ts-node": "^9.1.1",
    "ts-node-dev": "^1.1.6",
    "typescript": "^4.1.3",
    "wait-for-expect": "^3.0.2"
  },
  "dependencies": {
    "@koa/cors": "^3.1.0",
    "@mikro-orm/core": "^4.5.5",
    "@mikro-orm/mysql": "^4.5.5",
    "@sendgrid/mail": "^7.4.5",
    "bcrypt": "^5.0.0",
    "bee-queue": "^1.4.0",
    "date-fns": "^2.16.1",
    "dotenv": "^8.2.0",
    "ioredis": "^4.26.0",
    "jsonwebtoken": "^8.5.1",
    "koa": "^2.13.0",
    "koa-bodyparser": "^4.3.0",
    "koa-helmet": "^6.0.0",
    "koa-jwt": "^4.0.0",
    "koa-logger": "^3.2.1",
    "koa-rest-services": "^2.0.2",
    "lodash.groupby": "^4.6.0",
    "lodash.uniqwith": "^4.5.0",
    "uuid": "^8.3.2"
  },
  "mikro-orm": {
    "useTsNode": true,
    "configPaths": [
      "./src/config/mikro-orm.config.ts",
      "./config/mikro-orm.config.js"
    ]
  }
}
