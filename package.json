{
  "name": "game-services",
  "version": "0.1.0",
  "description": "",
  "main": "src/index.ts",
  "scripts": {
    "watch": "tsnd --respawn src/index.ts",
    "build": "tsc -p tsconfig.build.json",
    "seed": "docker-compose -f docker-compose.yml -f docker-compose.dev.yml exec backend yarn ts-node tests/seed.ts",
    "dc": "docker-compose -f docker-compose.yml -f docker-compose.dev.yml",
    "test": "./tests/setup-tests.sh",
    "up": "yarn dc up --build -d",
    "down": "yarn dc down",
    "logs": "yarn dc logs --follow backend",
    "restart": "yarn down && yarn up",
    "migration:create": "DB_HOST=127.0.0.1 mikro-orm migration:create",
    "service:create": "hygen service new",
    "prepare": "husky install",
    "lint": "eslint src/**/*.ts tests/**/*.ts"
  },
  "author": "Sleepy Studios",
  "license": "MIT",
  "devDependencies": {
    "@mikro-orm/cli": "^4.5.9",
    "@types/ioredis": "^4.22.3",
    "@types/jest": "^27.0.2",
    "@types/koa": "^2.11.6",
    "@types/koa-bodyparser": "^4.3.0",
    "@types/koa-logger": "^3.1.1",
    "@types/lodash": "^4.14.176",
    "@types/node": "^14.14.16",
    "@types/redis": "^2.8.29",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^5.1.0",
    "@typescript-eslint/parser": "^5.1.0",
    "casual": "^1.6.2",
    "eslint": "^7.32.0",
    "hefty": "^1.1.0",
    "husky": ">=6",
    "hygen": "^6.1.0",
    "jest": "^27.2.5",
    "lint-staged": ">=10",
    "supertest": "^6.1.3",
    "ts-jest": "^27.0.7",
    "ts-node": "^9.1.1",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.1.3",
    "wait-for-expect": "^3.0.2"
  },
  "dependencies": {
    "@koa/cors": "^3.1.0",
    "@mikro-orm/core": "^4.5.9",
    "@mikro-orm/migrations": "^4.5.9",
    "@mikro-orm/mysql": "^4.5.9",
    "@sendgrid/mail": "^7.4.7",
    "@sentry/node": "^6.13.3",
    "adm-zip": "^0.5.6",
    "bcrypt": "^5.0.1",
    "bee-queue": "^1.4.0",
    "date-fns": "^2.16.1",
    "dotenv": "^8.2.0",
    "handlebars": "^4.7.7",
    "ioredis": "^4.26.0",
    "jsonwebtoken": "^8.5.1",
    "koa": "^2.13.0",
    "koa-bodyparser": "^4.3.0",
    "koa-helmet": "^6.0.0",
    "koa-jwt": "^4.0.0",
    "koa-logger": "^3.2.1",
    "koa-rest-services": "^4.0.3",
    "lodash.get": "^4.4.2",
    "lodash.groupby": "^4.6.0",
    "lodash.uniqwith": "^4.5.0",
    "uuid": "^8.3.2"
  },
  "mikro-orm": {
    "useTsNode": true,
    "configPaths": [
      "./src/config/mikro-orm.config.ts",
      "./config/mikro-orm.config.js"
    ]
  },
  "lint-staged": {
    "*.{js,ts}": "eslint --fix"
  }
}
