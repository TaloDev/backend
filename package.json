{
  "name": "game-services",
  "version": "0.26.1",
  "description": "",
  "main": "src/index.ts",
  "scripts": {
    "watch": "tsnd --respawn src/index.ts",
    "build": "tsc -p tsconfig.build.json",
    "seed": "docker-compose -f docker-compose.yml -f docker-compose.dev.yml exec backend yarn ts-node tests/seed.ts",
    "dc": "docker-compose -f docker-compose.yml -f docker-compose.dev.yml",
    "test": "./tests/setup-tests.sh",
    "up": "yarn dc up --build -d",
    "down": "yarn dc down",
    "restart": "yarn dc restart backend && yarn logs",
    "logs": "yarn dc logs --follow backend",
    "migration:create": "DB_HOST=127.0.0.1 mikro-orm migration:create",
    "migration:up": "DB_HOST=127.0.0.1 mikro-orm migration:up",
    "service:create": "hygen service new",
    "prepare": "husky install",
    "lint": "eslint src/**/*.ts tests/**/*.ts"
  },
  "author": "Sleepy Studios",
  "license": "MIT",
  "devDependencies": {
    "@mikro-orm/cli": "^5.6.3",
    "@types/jest": "^29.2.3",
    "@types/koa": "^2.13.5",
    "@types/koa-bodyparser": "^4.3.7",
    "@types/koa-logger": "^3.1.2",
    "@types/lodash": "^4.14.182",
    "@types/node": "18",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.40.1",
    "@typescript-eslint/parser": "^5.40.1",
    "axios-mock-adapter": "^1.21.2",
    "casual": "^1.6.2",
    "eslint": "^8.26.0",
    "hefty": "^1.1.0",
    "husky": ">=6",
    "hygen": "^6.2.11",
    "jest": "^29.3.1",
    "lint-staged": ">=10",
    "supertest": "^6.3.1",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.7.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "4.9"
  },
  "dependencies": {
    "@dinero.js/currencies": "^2.0.0-alpha.8",
    "@koa/cors": "3.4.3",
    "@mikro-orm/core": "^5.6.3",
    "@mikro-orm/migrations": "^5.6.3",
    "@mikro-orm/mysql": "^5.6.3",
    "@sendgrid/mail": "^7.6.2",
    "@sentry/node": "^7.0.0",
    "@sentry/tracing": "^7.0.0",
    "adm-zip": "^0.5.6",
    "axios": "^1.0.0",
    "bcrypt": "^5.1.0",
    "bullmq": "^3.2.0",
    "date-fns": "^2.28.0",
    "dinero.js": "^2.0.0-alpha.8",
    "dotenv": "^16.0.0",
    "handlebars": "^4.7.7",
    "ioredis": "^5.2.4",
    "jsonwebtoken": "^9.0.0",
    "koa": "^2.13.4",
    "koa-bodyparser": "^4.3.0",
    "koa-clay": "^6.5.0",
    "koa-helmet": "^6.1.0",
    "koa-jwt": "^4.0.3",
    "koa-logger": "^3.2.1",
    "lodash.get": "^4.4.2",
    "lodash.groupby": "^4.6.0",
    "lodash.pick": "^4.4.0",
    "lodash.uniqwith": "^4.5.0",
    "otplib": "^12.0.1",
    "qrcode": "^1.5.0",
