{
  "compilerOptions": {
    "moduleDetection": "force",
    "moduleResolution": "bundler",
    "lib": ["ESNext", "ES2024.Collection"],
    "target": "esnext",
    "outDir": "dist",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "declaration": true,
    "types": ["vitest/globals", "./src/global.d.ts"],
    "skipLibCheck": true,
    "strict": true,
    "noImplicitOverride": true,
  },
  "ts-node": {
    "transpileOnly": true
  }
}
