{
  "compilerOptions": {
    "target": "ESNext",
    "module": "Preserve",
    "moduleDetection": "force",
    "moduleResolution": "bundler",
    "sourceMap": true,
    "outDir": "dist",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declaration": true,
    "types": ["vitest/globals", "./src/global.d.ts"],
    "lib": ["ESNext", "ES2024.Collection"],
    "skipLibCheck": true,
    "strict": true,
    "inlineSources": true,
    // "verbatimModuleSyntax": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    // strips the build path prefix, improves issue grouping in Sentry
    "sourceRoot": "/"
  }
}
